# Contributor: crab <crabtw@gmail.com>

_gemname=passenger
pkgname=$_gemname
pkgver=2.2.5
pkgrel=1
pkgdesc="Apache module for Ruby on Rails support"
arch=('i686' 'x86_64')
url="http://www.modrails.com/"
license=('GPL')
depends=('ruby' 'ruby-fastthread')
makedepends=('ruby')
source=(http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('912b76dabc68fd3a3393765255cb0a64')

build() {
  cd $srcdir
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" $_gemname-$pkgver.gem
}
