# Contributor: crab <crabtw@gmail.com>

pkgname=gem2arch-ruby
pkgver=0.3
pkgrel=1
pkgdesc="Create Arch Linux packages from Ruby Gem Packages"
arch=('i686' 'x86_64')
url="http://github.com/crabtw/"
license=('Ruby')
depends=('ruby' 'rubygems')
source=('gem2arch.rb')
md5sums=('08c37c2b1bc6875a7899e52abc615bb8')

build() {
  install -D -m755 $srcdir/gem2arch.rb $pkgdir/usr/bin/gem2arch-ruby
}
