# Contributor: crab <crabtw@gmail.com>

_gemname=do_mysql
pkgname=ruby-$_gemname
pkgver=0.10.0
pkgrel=1
pkgdesc="DataObjects MySQL Driver"
arch=('i686' 'x86_64')
url="http://github.com/datamapper/do"
license=('MIT')
depends=('ruby' 'ruby-data_objects' 'ruby-addressable' 'ruby-extlib' 'libmysqlclient')
makedepends=('ruby' 'libmysqlclient')
source=(http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('1bf95bcc1deeb81b58a155a5b215f00d')

build() {
  cd $srcdir
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" $_gemname-$pkgver.gem
}
