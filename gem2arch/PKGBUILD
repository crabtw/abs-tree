# Contributor: crab <crabtw@gmail.com>

pkgname=gem2arch
pkgver=0.1
pkgrel=1
pkgdesc="Create Arch Linux packages from Ruby Gem Packages "
arch=('i686' 'x86_64')
url="http://github.com/crabtw/"
license=('Ruby')
depends=('ruby' 'rubygems')
source=('gem2arch.rb')
md5sums=('9bbeeb258715a84b1e1a99d6c4fd4d89')

build() {
  install -D -m755 $srcdir/gem2arch.rb $pkgdir/usr/bin/gem2arch
}
