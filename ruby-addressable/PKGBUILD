# Contributor: crab <crabtw@gmail.com>

_gemname=addressable
pkgname=ruby-$_gemname
pkgver=2.1.0
pkgrel=1
pkgdesc="Addressable is a replacement for the URI implementation that is part of Ruby's standard library"
arch=('i686' 'x86_64')
url="http://addressable.rubyforge.org/"
license=('MIT')
depends=('ruby')
source=(http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('2dd05c5f444a4089d998f04ca14bc85e')

build() {
  cd $srcdir
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" $_gemname-$pkgver.gem
}
