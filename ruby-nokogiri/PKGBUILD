# Contributor: crab <crabtw@gmail.com>

_gemname=nokogiri
pkgname=ruby-$_gemname
pkgver=1.3.3
pkgrel=1
pkgdesc="Nokogiri is a libxml wrapper. It features an HTML, XML, SAX, and Reader parser, as well as XPath and CSS interfaces for searching."
arch=('i686' 'x86_64')
url="http://nokogiri.rubyforge.org/"
license=('MIT')
depends=('ruby' 'libxml2' 'libxslt')
makedepends=('ruby' 'libxml2' 'libxslt')
source=(http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('24f7b482886690b723ce6f74d6d879f4')

build() {
  cd $srcdir
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" $_gemname-$pkgver.gem
}
