# Contributor: crab <crabtw@gmail.com>

_gemname=rack
pkgname=$_gemname
pkgver=1.0.0
pkgrel=1
pkgdesc="Rack provides a common API for connecting web frameworks, web servers and layers of software inbetween"
arch=('i686' 'x86_64')
url="http://rack.rubyforge.org/"
license=('MIT')
depends=('ruby')
makedepends=('ruby')
source=(http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('014e29fa0aad84dd0fb4fc9707be7b8a')

build() {
  cd $srcdir
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" $_gemname-$pkgver.gem
}
